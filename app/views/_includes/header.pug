  nav
    button.btn-menu(data-bind="btnMenu")
      .btn-menu_hamburguer
      
    ul.navigation(data-bind="navigation")
      - var menu = [{"name":"Investimentos", "link":`${urlPages}`}, {"name":"Servi√ßos", "link":`${urlPages}`}, {"name":"Contato", "link":`${urlPages}`}, {"name":"Cadastre-se", "link":`${urlPages}`}];

      each item in menu
        li.navigation-item
          if selected === item.name
            a(class="selected" href=item.link) #{item.name}
